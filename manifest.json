{
  "manifest_version": 2,
  
  "name": "Hair on Screen",
  "description": "Displays a helpful hair on the screen",
  "version": "0.0.0.1",
  "author": "Anton Bovin",
  
  "browser_action": {
    "default_icon": "assets/icons/icon128.png"
  },
  
  "permissions": [
    "contextMenus",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["content_script_style.css"],
      "js": ["content_script.js"]
    }
  ],
  
  "web_accessible_resources": ["assets/*"]
}